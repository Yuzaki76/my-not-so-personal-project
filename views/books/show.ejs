<h2 class="page-header">
    <%= book.title %>
</h2>
<img src="<%= book.coverImagePath %> " alt="<%= book.title %>" width="100" height="150">
<div> Author: <%= book.author.name %>
</div>
<div> Publish date: <%= book.publishDate.toDateString() %>
</div>
<div> Page count: <%= book.pageCount %>
</div>
<div> description: <%= book.description %>
</div>
<a href="/books/<%= book.id %>/edit ">Edit</a>
<%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
<a href="/authors/<%= book.author.id %> ">Author</a>